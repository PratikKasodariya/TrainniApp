<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_list_ans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_list_name"
            android:textColor="@color/blue"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_list_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_name"
            android:text="Email:-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_list_ans_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_name"
            android:layout_toRightOf="@id/txt_list_email"
            android:textColor="@color/blue"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_list_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_email"
            android:text="Mobile:-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_list_ans_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_email"
            android:layout_toRightOf="@+id/txt_list_mobile"
            android:textColor="@color/blue"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txt_list_enrollment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_mobile"
            android:text="Enrollment NO:-"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_list_ans_enrollment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_ans_mobile"
            android:layout_toRightOf="@+id/txt_list_enrollment"
            android:textColor="@color/blue"
            android:textStyle="bold|italic" />


    </RelativeLayout>
